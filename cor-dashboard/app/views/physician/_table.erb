<% if metric == "weight" %>
<table class="table" id="weight_tab">
  <thead>
  <tr>
    <th>Reading Time</th>
    <th>Weight</th>
  </tr>
  </thead>
  <tbody>
  <% values.each do |i| %>
      <tr>
        <% sec = (i[0].to_f / 1000) %>
        <% datetime = Time.at(sec) %>
        <th><%=datetime%></th>
        <th><%= i[1] %></th>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>

