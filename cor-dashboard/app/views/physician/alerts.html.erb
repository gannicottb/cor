<div id="alertsdiv" class="col-sm-12">
	<h2 class="col-sm-offset-1" style="font-weight: lighter">Alerts and Notifications</h2>
	<ul>
		<% @alerts.each do |patientAlerts| %>
            <p> Alerts for <%= patientAlerts[0].patient.name %></p>
            <% patientAlerts.each do |a| %>
			    <li>
				    <%= render :partial => 'patient/alert', :locals => {alert: a} %>
			    </li>
		    <% end %>
        <% end %>
	</ul>
</div>
